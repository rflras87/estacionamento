<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Estacionamento - Gestão{% endblock %}</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <style>
        body { background-color: #f8f9fa; }
        .footer { padding: 10px 0; background-color: #e9ecef; }
        .main-content { min-height: calc(100vh - 120px); }
        
        /* PADRONIZAÇÃO DE TABELAS */
        .table th { 
            font-weight: 600; 
            text-transform: uppercase; 
            font-size: 0.85rem;
            vertical-align: middle;
        }
        .table td {
            vertical-align: middle;
            font-size: 0.95rem;
        }
        /* Estilo para linhas filhas (detalhes/sanfona) */
        .tr-detail {
            background-color: #f8f9fa !important;
        }
        .tr-detail td:first-child {
            border-left: 3px solid #0d6efd;
            padding-left: 20px;
        }
        
        /* Ajuste de ícones nos dropdowns */
        .dropdown-item i { width: 20px; text-align: center; display: inline-block; margin-right: 5px;}
    </style>
</head>
<body>
    {% if 'user_id' in session %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top shadow-sm">
        <div class="container-fluid">
            
            <span class="navbar-brand mb-0 h1">
                <i class="bi bi-p-square-fill me-2"></i>ParkSystem
            </span>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ url_for('home') }}">
                            <i class="bi bi-house-door-fill me-1"></i> Início
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-car-front-fill me-1"></i> Pátio
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="{{ url_for('dar_entrada') }}"><i class="bi bi-arrow-down-square-fill"></i> Dar Entrada</a></li>
                            <li><a class="dropdown-item" href="{{ url_for('listar_estacionados') }}"><i class="bi bi-list-ul"></i> Veículos Estacionados</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="{{ url_for('historico') }}"><i class="bi bi-clock-history"></i> Histórico de Saídas</a></li>
                        </ul>
                    </li>
                </ul>
                
                <ul class="navbar-nav d-flex align-items-center">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle me-1"></i> {{ session.get('user_nome', 'Usuário') }}
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow">
                            <li><h6 class="dropdown-header text-uppercase text-warning"><i class="bi bi-wallet2"></i> Caixa ({{ caixa_status }})</h6></li>
                            {% if caixa_status == 'ABERTO' %}
                                <li><a class="dropdown-item text-danger" href="{{ url_for('fechar_caixa') }}"><i class="bi bi-door-closed-fill"></i> Fechar Caixa</a></li>
                            {% else %}
                                <li><a class="dropdown-item text-success" href="{{ url_for('abrir_caixa') }}"><i class="bi bi-door-open-fill"></i> Abrir Caixa</a></li>
                            {% endif %}
                            <li><hr class="dropdown-divider"></li>
                            <li><h6 class="dropdown-header text-uppercase text-primary"><i class="bi bi-kanban"></i> Gestão</h6></li>
                            <li><a class="dropdown-item" href="{{ url_for('listar_clientes') }}"><i class="bi bi-people-fill"></i> Clientes</a></li>
                            <li><a class="dropdown-item" href="{{ url_for('relatorios') }}"><i class="bi bi-bar-chart-fill"></i> Relatórios</a></li>
                            {% if session.get('user_perfil') == 'ADMIN' %}
                                <li><a class="dropdown-item" href="{{ url_for('relatorio_caixas') }}"><i class="bi bi-receipt"></i> Histórico Caixas</a></li>
                            {% endif %}
                            {% if session.get('user_perfil') == 'ADMIN' %}
                            <li><hr class="dropdown-divider"></li>
                            <li><h6 class="dropdown-header text-uppercase text-danger"><i class="bi bi-cpu-fill"></i> Sistema</h6></li>
                            <li><a class="dropdown-item" href="{{ url_for('financeiro') }}"><i class="bi bi-cash-coin"></i> Financeiro</a></li>
                            <li><a class="dropdown-item" href="{{ url_for('configuracoes') }}"><i class="bi bi-sliders"></i> Configurações</a></li>
                            <li><a class="dropdown-item" href="{{ url_for('listar_usuarios') }}"><i class="bi bi-person-gear"></i> Usuários</a></li>
                            {% endif %}
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="{{ url_for('perfil') }}"><i class="bi bi-person-badge"></i> Meu Perfil</a></li>
                            <li><a class="dropdown-item text-danger fw-bold" href="{{ url_for('logout') }}"><i class="bi bi-box-arrow-right"></i> Sair</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    {% endif %}

    <main class="container mt-4 mb-5 main-content">
        {% with messages = get_flashed_messages(with_categories=true) %}
            {% if messages %}
                {% for category, message in messages %}
                    <div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">
                        {% if category == 'success' %}<i class="bi bi-check-circle-fill me-2"></i>
                        {% elif category == 'danger' %}<i class="bi bi-exclamation-triangle-fill me-2"></i>
                        {% elif category == 'warning' %}<i class="bi bi-exclamation-circle-fill me-2"></i>
                        {% else %}<i class="bi bi-info-circle-fill me-2"></i>{% endif %}
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endif %}
        {% endwith %}
        {% block content %}{% endblock %}
    </main>

    <footer class="footer text-center fixed-bottom">
        <div class="container">
            <span class="text-muted small">
                <strong>{{ estab.nome }}</strong> | Sistema v1.0 | &copy; {{ obter_data_br().year }}
            </span>
        </div>
    </footer>

    <div class="modal fade" id="modalGlobalConfirmacao" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header text-white" id="modalGlobalHeader">
                    <h5 class="modal-title" id="modalGlobalTitulo">Confirmação</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p id="modalGlobalMensagem">Tem certeza?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <a href="#" id="modalGlobalBtnConfirmar" class="btn btn-primary">Confirmar</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        function confirmarAcao(acao, url, isDelete = false) {
            const modalEl = document.getElementById('modalGlobalConfirmacao');
            const modal = new bootstrap.Modal(modalEl);
            
            document.getElementById('modalGlobalTitulo').innerText = acao;
            document.getElementById('modalGlobalMensagem').innerText = `Tem certeza que deseja ${acao.toLowerCase()} este registro?`;
            
            const btn = document.getElementById('modalGlobalBtnConfirmar');
            btn.href = url;
            
            const header = document.getElementById('modalGlobalHeader');
            
            if (isDelete) {
                header.className = 'modal-header bg-danger text-white';
                btn.className = 'btn btn-danger';
                btn.innerText = 'Excluir';
            } else {
                header.className = 'modal-header bg-success text-white';
                btn.className = 'btn btn-success';
                btn.innerText = 'Confirmar';
            }
            
            modal.show();
        }
    </script>

    {% block scripts %}{% endblock %}
</body>
</html>